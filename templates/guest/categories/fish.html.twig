{% extends 'base.html.twig' %}

{% block header %}
    <header id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('img/header-fish.png') }}" class="d-block w-100">
            </div>
        </div>
    </header>
{% endblock %}
{% block body %}
    <div class="container d-flex p-5 my-5 text-center justify-content-center align-items-center">
        <div class="row row-cols-1 row-cols-md-3">
            <div class="col">
                <div class="card">
                    <a href="{{ path('fish') }}">
                        <img src="{{ asset('img/fish/tuna-pizza.png') }}" class="card-img-top img-fluid" alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-decoration-none">Tuna pizza</h5>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <a href="{{ path('meat') }}">
                        <img src="{{ asset('img/fish/smoked-salmon-pizza.png') }}" class="card-img-top img-fluid" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Smoked Salmon pizza</h5>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <a href="{{ path('vegetarian') }}">
                        <img src="{{ asset('img/fish/shrimp-scampi-pizza.png') }}" class="card-img-top img-fluid" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Shrimp Scampi pizza</h5>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
