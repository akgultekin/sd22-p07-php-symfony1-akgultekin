{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex p-5 my-5 text-center justify-content-center">
        <div class="row row-cols-1 row-cols-md-3">
            {% for category in categories %}
                <div class="col">
                    <div class="card">
                        <a class="text-decoration-none text-black" href="{{ path('pizzas', {id: category.id}) }}">
                            <img src="{{ asset('img/' ~ category.image) }}" class="card-img-top img-fluid" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{ category.name }}</h5>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
